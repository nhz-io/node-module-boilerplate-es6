{
  "name": "node-module-boilerplate-es6",
  "version": "0.0.0",
  "description": "node module boilerplate",
  "license": "MIT",
  "scripts": {
    "prepublish": "npm i"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "xo": {
    "esnext": true,
    "ignores": [
      "dist/**",
      "doc/**",
      "test/**",
      "**/tmp/**"
    ],
    "rules": {
      "semi": [
        1,
        "never"
      ],
      "no-fallthrough": 1,
      "babel/new-cap": 1,
      "comma-dangle": [
        1,
        "always-multiline"
      ]
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "files": [
      "test/**/*.js",
      "!**/tmp"
    ],
    "babel": "inherit"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-plugin-mocktail": "^0.1.16",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "del": "^2.2.0",
    "gulp": "^3.9.1",
    "gulp-ava": "^0.12.0",
    "gulp-babel": "^6.1.2",
    "gulp-esdoc": "^0.2.0",
    "gulp-rollup": "^1.9.0",
    "gulp-sequence": "^0.4.5",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.3",
    "gulp-xo": "^0.11.0",
    "mocktail": "^0.3.8",
    "rollup-plugin-commonjs": "^3.0.0",
    "rollup-plugin-node-resolve": "^1.7.0"
  }
}
